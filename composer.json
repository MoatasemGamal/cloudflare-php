{
  "name": "cloudflare/sdk",
  "description": "Modern PHP binding for v4 of the Cloudflare Client API with PHP 8.1+ support.",
  "type": "library",
  "keywords": ["cloudflare", "api", "dns", "cdn", "security", "waf", "firewall"],
  "homepage": "https://github.com/MoatasemGamal/cloudflare-php",
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.4",
    "psr/http-message": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpmd/phpmd": "^2.14",
    "friendsofphp/php-cs-fixer": "^3.80",
    "rector/rector": "^1.0",
    "phpstan/phpstan": "^1.10"
  },
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Junade Ali",
      "email": "junade@cloudflare.com"
    },
    {
      "name": "Moatasem Gamal",
      "email": "moatasemgamal@gmail.com",
      "role": "Maintainer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Cloudflare\\API\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cloudflare\\API\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "rector/rector": true
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage/ --coverage-text",
    "analyse": "phpstan analyse --memory-limit=2G",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix",
    "rector:check": "rector process --dry-run",
    "rector:fix": "rector process",
    "quality": [
      "@cs:check",
      "@analyse",
      "@test"
    ],
    "fix": [
      "@rector:fix",
      "@cs:fix"
    ]
  },
  "scripts-descriptions": {
    "test": "Run the test suite",
    "test:coverage": "Run tests with code coverage report",
    "analyse": "Run static analysis with PHPStan",
    "cs:check": "Check code style without making changes",
    "cs:fix": "Fix code style issues automatically",
    "rector:check": "Preview Rector refactoring changes",
    "rector:fix": "Apply Rector refactoring changes",
    "quality": "Run all quality checks (style, analysis, tests)",
    "fix": "Apply all automated fixes (Rector + CS-Fixer)"
  }
}
